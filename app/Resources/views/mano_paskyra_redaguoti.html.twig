{% extends 'default/base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body %}
    <div class="col-md-5" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
        <div>
            <label class="col-md-12" style="text-align: center">Mano paskyra</label>
        </div>
        {{ form_start(form) }}
        <div class="form-group col-md-12" style="border: 1px solid;">
            <label class="col-md-4"><img src={{ image }}  class="img-responsive"></label>
            <label class="col-md-12"><a href="/mano_paskyra/redaguoti/nuotrauka">Keisti nuotrauką</a></label>

        </div>
        <div class="form-group col-md-12" style="border: 1px solid;">

            <label class="col-md-12">{{ form_label(form.name_surname) }}</label>
            <label class="col-md-12">{{ form_widget(form.name_surname) }}</label>
            <label class="col-md-12">{{ form_label(form.email) }}</label>
            <label class="col-md-12">{{ form_widget(form.email) }}</label>
            <label class="col-md-12">{{ form_label(form.phone_number) }}</label>
            <label class="col-md-12">{{ form_widget(form.phone_number) }}</label>
            <label class="col-md-12"><a href="/mano_paskyra/redaguoti/slaptazodis">Keisti Slaptažodį</a></label>
        </div>
        <div>
            <label class="col-md-12" >{{ form_widget(form.submit) }}</label>
        </div>
        <div style="display: none">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
