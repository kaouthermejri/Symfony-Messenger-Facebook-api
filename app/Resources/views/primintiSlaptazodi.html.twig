{% extends 'default/base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body %}
    <div class="col-md-3" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
        <div>
            <label class="col-md-12" style="text-align: center">Priminti slaptažodį</label>
        </div>
        {{ form_start(form) }}
        <div class="form-group">
            <label>{{ form_label(form.email) }}</label>
            <label>{{ form_widget(form.email) }}</label>
        </div>
        <div style="text-align: center">
            <label >{{ form_widget(form.send) }}</label>
        </div>
        <div style="display: none">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}