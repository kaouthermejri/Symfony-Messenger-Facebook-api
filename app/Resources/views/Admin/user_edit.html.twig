{% extends 'default/base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block body %}

    <div class="col-md-5" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
        <div>
            <label class="col-md-12" style="text-align: center">{{ user }}</label>
        </div>
        {{ form_start(form) }}
        <div class="form-group col-md-4" style="border: 1px solid;">
            <label class="col-md-12"><img src={{ asset('uploads/user_image/') }}{{ picture }}  class="img-responsive"></label>
            <label class="col-md-12">{{ form_label(form.image) }}</label>
            <label class="col-md-12">{{ form_widget(form.image) }}</label>

        </div>
        <div class="form-group col-md-8" style="border: 1px solid;">

            <label class="col-md-12">{{ form_label(form.username) }}</label>
            <label class="col-md-12">{{ form_widget(form.username) }}</label>
            <label class="col-md-12">{{ form_label(form.email) }}</label>
            <label class="col-md-12">{{ form_widget(form.email) }}</label>
            <label class="col-md-12">{{ form_label(form.phone_number) }}</label>
            <label class="col-md-12">{{ form_widget(form.phone_number) }}</label>
            <label class="col-md-12">{{ form_label(form.password) }}</label>
            <label class="col-md-12">{{ form_widget(form.password) }}</label>
            <label class="col-md-12">{{ form_label(form.category) }}</label>
            <label class="col-md-12">{{ form_widget(form.category) }}</label>

        </div>
        <div>
            <label class="col-md-12" >{{ form_widget(form.submit) }}</label>
        </div>
        <div style="display: none">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
        <div class="col-md-12">
            <label><a href="/1">Atgal</a></label>
        </div>
    </div>
{% endblock %}
