{% extends 'default/base.html.twig' %}

{% block body %}

    <script>
        window.fbAsyncInit = function() {
            FB.init({
                appId      : '137586016736966',
                xfbml      : true,
                version    : 'v2.6'
            });
        };

        (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <div
            class="fb-like"
            data-share="true"
            data-width="450"
            data-show-faces="true">
    </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div
            class="fb-like"
            data-share="true"
            data-width="450"
            data-show-faces="true">
    </div>
<form action="{{ path('login_check') }}" method="post">
    <div class="col-md-3" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
        <div>
            <label class="col-md-12" style="text-align: center">Prisijungti</label>
            <label class="col-md-12" style="text-align: center">Facebook prisijungimas</label>
            <label class="col-md-12" style="text-align: center"> <div class="fb-login-button" data-max-rows="1" data-size="xlarge" data-show-faces="false" data-auto-logout-link="false"></div></label>
            <label class="col-md-12" style="text-align: center">- arba -</label>
        </div>

        <div class="form-group">
            <label class="col-md-12"  style="font-family: 'Times New Roman'; text-align: center;">El. paštas</label>
            <label class="col-md-12" style="margin-bottom: 5%;text-align: center"><input class="form-control" type="text" id="email" name="_email" value="{{ last_username }}" /></label>
        </div>
        <div class="form-group">
            <label class="col-md-12" style="font-family: 'Times New Roman'; text-align: center;">Slaptažodis</label>
            <label class="col-md-12" style="margin-bottom: 5%;text-align: center"><input class="form-control" type="password" id="password" name="_password" /></label>
        </div>
        <div>
            <label class="col-md-12" style="text-align: center" ><button type="submit">Prisijungti</button></label>
        </div>
        <div style="display: none">

        </div>

        <div>
            <label><a href={{ path('priminti_slaptazodi') }}>Priminti slaptažodį</a></label>
        </div>
        <div>
            <label class="col-md-12" style="text-align: center">- Dar nesate užsiregistravę? -</label>
        </div>
        <div>
            <label class="col-md-12" style="text-align: center"><a href="/registracija"><button type="button" class="btn btn-default" >REGISRUOTIS</button></a></label>
        </div>
    </div>
</form>
{% endblock %}