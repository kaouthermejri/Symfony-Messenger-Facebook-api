{% extends(':default:base.html.twig') %}
{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block fos_user_content %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    <div class="col-md-3" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
        <div>
            <label class="col-md-12" style="text-align: center">Registracija</label>
            <label class="col-md-12" style="text-align: center">Registruotis su Facebook</label>
            <label class="col-md-12" style="text-align: center"> <a href={{ hwi_oauth_login_url('facebook') }}>Registruokis su Facebook</a></label>
            <label class="col-md-12" style="text-align: center">- arba -</label>
        </div>

        <div class="form-group">
            <label class="col-md-12">Vardas Pavardė*</label>
            <label class="col-md-12">{{ form_widget(form.username) }}</label>
            {{ form_errors(form.username) }}
        </div>
        <div class="form-group">
            <label class="col-md-12">Telefono Numeris*</label>
            <label class="col-md-12">{{ form_widget(form.phone_number) }}</label>
        </div>
        <div class="form-group">
            <label class="col-md-12">El.paštas*</label>
            <label class="col-md-12">{{ form_widget(form.email) }}</label>
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group" hidden>

            <label class="col-md-12">{{ form_widget(form.temporaryImage) }}</label>

        </div>
        <div class="form-group">
            <label class="col-md-12">Slaptažodis</label>
            {{ form_errors(form.plainPassword.first) }}
            <label class="col-md-12">{{ form_widget(form.plainPassword.first) }}</label>
            <label class="col-md-12">Pakartoti Slaptažodį</label>
            {{ form_errors(form.plainPassword.second) }}
            <label class="col-md-12">{{ form_widget(form.plainPassword.second) }}</label>
        </div>
        <div>
            <label class="col-md-12" ><input type="submit" value="{{ 'Registruotis'|trans }}" /></label>
        </div>
        <div style="display: none">
            {{ form_rest(form) }}
        </div>


    </div>
{{ form_end(form) }}
{% endblock fos_user_content %}
