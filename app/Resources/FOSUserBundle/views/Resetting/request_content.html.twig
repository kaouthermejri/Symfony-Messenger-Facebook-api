{% trans_default_domain 'FOSUserBundle' %}
{% extends 'default/base.html.twig' %}
{% block fos_user_content %}
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="col-md-3" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
        <div>
            <label class="col-md-12" style="text-align: center">Priminti slaptažodį</label>
        </div>

        <div class="form-group" style="text-align: center">
            <label for="username">Vardas Pavardė arba elektroninis paštas</label>
            <input type="text" id="username" name="username" required="required" />
        </div>
        <div style="text-align: center">
            <input type="submit" value="Priminti" />
        </div>
        <div style="display: none">

        </div>

    </div>

</form>
{% endblock %}